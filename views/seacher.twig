{% extends 'layout.twig' %}
{% block head %}

{% endblock %}
{% block body %}
    <div class="container">
        <div class="hy-layout clearfix">
            <div class="hy-video-head">
                <span class="text-muted pull-right hidden-xs"></span>
                <h4 class="margin-0">搜索到与<span class="text-color">“{{ wd }}”</span>相关的结果</h4>
            </div>
            <div class="hy-video-details active clearfix">
                <div class="item clearfix">
                    {% for u in hy %}
                    <dl class="content">
                        <dt><a class="videopic" href="{{u.ahref}}" style="background: url({{u.imag}}) no-repeat; background-position:50% 50%; background-size: cover;"><span class="play hidden-xs"></span></a></dt>
                        <dd class="clearfix">
                            <div class="head">
                                <h3>{{u.title}}</h3>
                            </div>
                            <div class="score">
                                <div class="star">
                                    <span class="star-cur" id="score-0"></span>
                                </div>
                                <span class="branch"></span>
                                <script type="text/javascript">
                                    var str = "0%"
                                    document.getElementById("score-0").style.width = (str.replace(".", ""))
                                </script>
                            </div>
                            <ul>
                                {{ u.yangy }}
                                <li><span class="text-muted">简介：</span>
                                {{ u.jj }}
                                </li>

                            </ul>
                            <div class="block">
                                <a class="text-muted" href="{{u.ahref}}">查看详情 <i class="icon iconfont icon-right"></i></a>
                            </div>
                        </dd>
                    </dl>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <script>
        var swiper = new Swiper('.hy-slide', {
            pagination: '.swiper-pagination',
            paginationClickable: true,
            autoplay: 3000,
        });
    </script>

{% endblock %}
{% block script %}

{% endblock %}
